package com.onlineShop.controller;

import java.util.List;

import org.hibernate.cache.spi.support.AbstractReadWriteAccess.Item;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.security.access.prepost.PreAuthorize;
import org.springframework.security.config.annotation.method.configuration.EnableMethodSecurity;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.onlineShop.model.Product;
import com.onlineShop.service.ItemService;

import lombok.extern.log4j.Log4j2;

@RestController
@EnableMethodSecurity
@RequestMapping("/api/items")
@Log4j2
public class ItemController {

	@Autowired
	private ItemService itemService;

	@PreAuthorize("hasAuthority('ADMIN_ROLES')")
	@PostMapping("/add")
	public ResponseEntity<Product> addItem(@RequestBody Item item) {
		log.info("Adding item: {}", item);
		Item savedItem = itemService.addItem(item);
		log.info("Item added successfully: {}", savedItem);
		return new ResponseEntity<>(savedItem, HttpStatus.CREATED);
	}

	@PutMapping("/update/{id}")
	@PreAuthorize("hasAuthority('ADMIN_ROLES')")
	public ResponseEntity<Item> updateItem(@PathVariable Long id, @RequestBody Item item) {
		log.info("Updating item with ID {}: {}", id, item);
		Item updatedItem = itemService.updateItem(id, item);
		log.info("Item updated successfully: {}", updatedItem);
		return new ResponseEntity<>(updatedItem, HttpStatus.OK);
	}

	@DeleteMapping("/delete/{id}")
	@PreAuthorize("hasAuthority('ADMIN_ROLES')")
	public ResponseEntity<Void> deleteItem(@PathVariable Long id) {
		log.info("Deleting item with ID: {}", id);
		itemService.deleteItem(id);
		log.info("Item deleted successfully");
		return new ResponseEntity<>(HttpStatus.NO_CONTENT);
	}

	@GetMapping("/view")
	//@PreAuthorize("hasAuthority('USER_ROLES')")
	public ResponseEntity<List<Item>> viewItems() {
		log.info("Viewing all items");
		List<Item> items = itemService.viewItem();
		log.info("Items retrieved: {}", items);
		return new ResponseEntity<>(items, HttpStatus.OK);
	}
}
