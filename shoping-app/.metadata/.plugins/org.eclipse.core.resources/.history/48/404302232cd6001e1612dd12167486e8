package com.onlineShop.secuirty.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.core.userdetails.UserDetails;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.onlineShop.secuirty.dto.AuthRequest;
import com.onlineShop.secuirty.entity.UserCredential;
import com.onlineShop.secuirty.service.AuthService;

@RestController
public class AuthController {

    @Autowired
    private AuthService service;

    @PostMapping("/auth/register")
    public String addNewUser(@RequestBody UserCredential user) {
        return service.saveUser(user);
    }

    @PostMapping("/auth/token")
    public String getToken(@RequestBody AuthRequest authRequest) {
        UserCredential userDetails = service.getUserByName(authRequest.getUsername());
        return service.generateToken(userDetails);
    }

    @GetMapping("/auth/validate")
    public String validateToken(@RequestParam("token") String token) {
        UserDetails userDetails = service.extractUserDetails(token);
        return service.validateToken(token, userDetails);
    }
}
